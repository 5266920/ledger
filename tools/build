#!/bin/sh

set -e

SRCDIR=$(pwd)

if [ -d ~/Products/ledger ]; then
    cd ~/Products/ledger
fi

if [ ! -f Makefile -o \
     $SRCDIR/Makefile.am  -nt Makefile -o \
     $SRCDIR/configure.ac -nt Makefile -o \
     $SRCDIR/acprep       -nt Makefile -o \
     $SRCDIR/myacprep     -nt Makefile ]; then
    (cd $SRCDIR && tools/myacprep)
fi

make "$@"
