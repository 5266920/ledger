--explicit
--pedantic

commodity $
    format $1,000.00

account Assets:Cash
    assert abs(amount) <= 20
    check commodity == '$'

account Expenses:Food
    alias food
    payee KFC

2012-02-27 KFC
    Expenses:Unknown                          $20.00
    Assets:Cash

2012-02-28 KFC
    food                                      $20.00
    Assets:Cash

test reg
12-Feb-27 KFC                   Expenses:Food                $20.00       $20.00
                                Assets:Cash                 $-20.00            0
12-Feb-28 KFC                   Expenses:Food                $20.00       $20.00
                                Assets:Cash                 $-20.00            0
end test
